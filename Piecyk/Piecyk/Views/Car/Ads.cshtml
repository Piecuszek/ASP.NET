@model IEnumerable<Piecyk.Models.CarModels>

@{
    ViewBag.Title = "Index";
}
<br />
<h2>Ogłoszenia</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mark)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalesAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalesAmount)
            </td>
            <td>
                @if (item.UserInfo.Email == User.Identity.Name)
                {
                    if (item.Status == true)
                    {
                        @Html.ActionLink("Anuluj", "Checked", new { id = item.ID })
                    }
                    else
                    {
                        @Html.ActionLink("Wystaw", "Check", new { id = item.ID })
                    }
                }
                else
                {
                    if (item.Status == true)
                    {
                        @Html.ActionLink("Kup", "Buy", new { id = item.ID })
                    }
                }
            </td>
            <td>
                @if (item.UserInfo.Email == User.Identity.Name)
                {
                    @Html.ActionLink("Edycja", "Edit", new { id = item.ID })
                    <b> | </b>
                    @Html.ActionLink("Usuń", "Delete", new { id = item.ID })
                    <b> | </b>
                }
                @Html.ActionLink("Szczegóły", "Details", new { id = item.ID })
            </td>
        </tr>
    }

</table>
